@import './variables';
@import './../node_modules/purecss/build/base-min.css';
@import './../node_modules/purecss/build/grids-min.css';
@import './transitions';

* {
  box-sizing: border-box; }
html, body, html .pure-g [class *="pure-u"] {
  font-family: "Helvetica Neue", Helvetica, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "微软雅黑", Arial, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
html, body {
  background: theme_color;
  color: theme_font_color;
  font-size: 12px;
}
h1, h2, h3, h4, h5, h6 {
  margin: 0;
  font-weight: 500; }
a {
  color: inherit;
  text-decoration: none; }
p {
  margin: 0; }
input:-webkit-autofill {
  -webkit-box-shadow: 0 0 0px 1000px white inset;
  -webkit-text-fill-color: black; }
//  -----------------------------------------------------------

.shadow-deep {
  box-shadow: 0 20px 40px -15px rgba(0, 0, 0, .5), 0 -2px 8px -5px rgba(0, 0, 0, 0.5); }
.shadow-normal {
  box-shadow: 0 6px 15px -6px rgba(0, 0, 0, .5), 0 -2px 8px -5px rgba(0, 0, 0, 0.5); }
.shadow-light {
  box-shadow: 0 2px 5px -2px rgba(0, 0, 0, .5); }
.block-center {
  display: block;
  margin-left: auto;
  margin-right: auto;
}
.text-center {
  text-align: center; }
.text-left {
  text-align: left; }
.text-right {
  text-align: right; }
.grid-spacing {
  margin-left: -6px;
  margin-right: -6px;
}
.grid-spacing-u {
  padding-left: 6px;
  padding-right: 6px;
}
.drag-handle {
  cursor: move;
  cursor: -webkit-grabbing; }
